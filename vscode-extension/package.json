{
    "name": "sfcore-rag-assistant",
    "displayName": "SFCore RAG Assistant",
    "description": "SFCore Assistant RAG",
    "version": "0.0.1",
    "publisher": "sfcore",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:sfcore.start"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "sfcore.start",
                "title": "Start RAG Assistant"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "pnpm run esbuild-base -- --sourcemap",
        "esbuild-watch": "pnpm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "esbuild": "^0.21.4",
        "typescript": "^5.4.5",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0"
    },
    "dependencies": {
        "axios": "^1.7.2"
    }
}
